<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp">




        <TextView
            android:id="@+id/text_view_prenom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"


       />

        <TextView
            android:id="@+id/text_view_nom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_below="@id/text_view_prenom"
           />

        <TextView
            android:id="@+id/text_view_courriel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_nom"
             />

        <TextView
            android:id="@+id/text_view_anciennete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_courriel"
             />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"


            android:src="@drawable/ic_create"

            android:layout_alignParentEnd="true"

            android:id="@+id/image_create"
            android:layout_alignParentRight="true" />





    </RelativeLayout>

</android.support.v7.widget.CardView>